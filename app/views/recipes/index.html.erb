  <h1>Recipes</h1>
  <hr/>

  <% @recipes.each do |recipe| %>
    <div class="row">
      
      <div class=col-md-2>
        <section class="chef_info center gravatar" >
          <%= gravatar_for recipe.chef size: 100 %>
          <h5> By: <%= recipe.chef.chefname %> </h5>
        </section>
      </div>
      
      <div class="well col-lg-6">
        <h5><%= link_to recipe.name, recipe_path(recipe) %></h5>
        <p><%= recipe.summary %></p>
        <p>
          <span class="quiet"><small><%= time_ago_in_words(recipe.updated_at) %> ago</small></span>
        </p>
      </div>
      
      <div class="col-md-4">
        <%=image_tag(recipe.picture.url, size: "250x150", class: "gravatar") if recipe.picture? %>
      </div>
    </div>
  <% end %>