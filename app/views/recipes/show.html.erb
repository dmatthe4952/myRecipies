<p>
  <h1><%=@recipe.name%></h1>
  <hr/>
</p>
<div class="row">
      
  <div class="col-md-4 pull-right center">
    <section class="chef_info center gravatar"  %>
     <%= gravatar_for @recipe.chef, size: 200 %>
     <h5> By: <%= @recipe.chef.chefname %> </h5>
    </section>
  </div>
  <div class="col-md-8 recipe">
    <h5><%= link_to 'Edit Recipe', edit_recipe_path, class: "btn btn-success btn-small pull-right" %></h5>      
    <h3><%= @recipe.summary %></h3>
    <div class="show_recipe">
      <%=image_tag(@recipe.picture.url, class: "gravatar") if @recipe.picture? %>
    </div>
    <div class="well">
      <%= simple_format(@recipe.description) %></p>
      <div class="pull-right">
        <%= link_to like_recipe_path(@recipe, like: true), method: :post do %>
          <i></i> &nbsp <%=@recipe.thumbs_up_total %>
        <% end %> &nbsp
        <%= link_to like_recipe_path(@recipe, like: false), method: :post do %>
          <i></i> &nbsp <%= @recipe.thumbs_down_total %>
        <% end %>
      </div>
    </div>
    <h5><%= link_to 'Return to Recipes Listings', recipes_path, class: "btn btn-warning btn-small" %></h5>
</div>
    