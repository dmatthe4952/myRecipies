<%= render 'shared/page_title', title: 'Chef: ' + @chef.chefname %>
<div class='row'>
  <div class="col-md-4 col-md-offset-4 center">
    <div class="chef_info center gravatar"  %>
     <%= gravatar_for @chef, size: 100 %>
     </hr>
    </div>
  </div>
</div>

<div class='row'>
  <div class= 'col-md-4 col-md-offset-4 center'>
    <h5>
      Recipes:
    </h5>
    <%= will_paginate @recipes %>
  </div>
</div>

  <% @recipes.each do |recipe| %>
    <div class="row">
      <div class="well col-lg-6 col-lg-offset-3">
        <h5><%= link_to recipe.name, recipe_path(recipe) %></h5>
        <p><%= recipe.summary %></p>
        <p>
          <span class="quiet"><small><%= time_ago_in_words(recipe.updated_at) %> ago</small></span>
        </p>
        <div class="pull-right">
          <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%=recipe.thumbs_up_total %>
          <% end %> &nbsp&nbsp&nbsp
          <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
            <i class='glyphicon glyphicon-thumbs-down'></i> &nbsp <%=recipe.thumbs_down_total %>
          <% end %>
        </div>
      </div>
    </div>
  <%end%>
